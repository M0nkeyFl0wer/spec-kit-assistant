{
  "all": true,
  "include": ["src/**/*.js"],
  "exclude": [
    "src/**/*.test.js",
    "node_modules/**",
    "tests/**"
  ],
  "reporter": ["text", "lcov", "html"],
  "report-dir": "coverage",
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 70,
  "statements": 80,
  "skip-full": false,
  "clean": true
}
